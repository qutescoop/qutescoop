<project>
    <shortName>qutescoop</shortName>
    <fullName>QuteScoop</fullName>
    <version>2.0rc18</version>
    <installerFilename>${platform_name}-${product_shortname}-${product_version}-installer.${platform_exec_suffix}</installerFilename>
    <licenseFile>COPYING</licenseFile>
    <logoImage>src/qutescoop.png</logoImage>
    <wmImage>src/qutescoop.png</wmImage>
    <initializationActionList>
        <setInstallerVariable name="userDataLocation" value="~/.local/share/data/QuteScoop/QuteScoop/">
            <ruleList>
                <platformTest type="linux"/>
            </ruleList>
        </setInstallerVariable>
        <setInstallerVariable name="userDataLocation" value="~/Library/Application Support/QuteScoop/QuteScoop/">
            <ruleList>
                <platformTest type="osx"/>
            </ruleList>
        </setInstallerVariable>
        <setInstallerVariable name="userDataLocation" value="${windows_folder_local_appdata}/QuteScoop/QuteScoop/">
            <ruleList>
                <platformTest type="windows"/>
            </ruleList>
        </setInstallerVariable>
        <setInstallerVariable name="systemDataLocation" value="/usr/local/share/data/QuteScoop/QuteScoop/">
            <ruleList>
                <platformTest type="linux"/>
            </ruleList>
        </setInstallerVariable>
        <setInstallerVariable name="systemDataLocation" value="/Library/Application Support/QuteScoop/QuteScoop/">
            <ruleList>
                <platformTest type="osx"/>
            </ruleList>
        </setInstallerVariable>
        <setInstallerVariable name="systemDataLocation" value="${windows_folder_appdata}/QuteScoop/QuteScoop/">
            <ruleList>
                <platformTest type="windows"/>
            </ruleList>
        </setInstallerVariable>
    </initializationActionList>
    <debianCustomPackageDirectory>DIST-unix/DEBIAN</debianCustomPackageDirectory>
    <defaultInstallationMode>qt</defaultInstallationMode>
    <description>application description goes here</description>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <installationScope>user</installationScope>
    <nativePackageName>qutescoop</nativePackageName>
    <osxApplicationBundleIcon>src/Dolomynum.icns</osxApplicationBundleIcon>
    <outputDirectory>DIST</outputDirectory>
    <readmeFileEncoding>utf-8</readmeFileEncoding>
    <release>${product_version}</release>
    <saveRelativePaths>1</saveRelativePaths>
    <summary>one-liner goes here</summary>
    <vendor>QuteScoop</vendor>
    <windowsExecutableIcon>src/Dolomynum.ico</windowsExecutableIcon>
    <windowsResourceFileVersion>${product_version}</windowsResourceFileVersion>
    <windowsUninstallerExecutableIcon>src/Dolomynum.ico</windowsUninstallerExecutableIcon>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>${product_fullname}</comment>
                    <exec>${installdir}/QuteScoop.sh</exec>
                    <icon>${installdir}/qutescoop.png</icon>
                    <name>${product_fullname}</name>
                    <path>${installdir}</path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}\QuteScoop.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>DIST-unix/README.html</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-unix/CHANGELOG</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-unix/COPYING</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-unix/QuteScoop</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-unix/qutescoop.png</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-unix/QuteScoop.sh</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>DIST-win32/QuteScoop.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-win32/CHANGELOG</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-win32/COPYING</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-win32/libgcc_s_dw2-1.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-win32/mingwm10.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-win32/QtCore4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-win32/QtGui4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-win32/QtNetwork4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-win32/QtOpenGL4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-win32/QtXml4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-win32/README.html</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>DIST-macx/CHANGELOG</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-macx/COPYING</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>DIST-macx/README.html</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>userData</description>
                    <destination>${windows_folder_local_appdata}/QuteScoop/QuteScoop</destination>
                    <name>userData</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>DIST-win32/data</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>DIST-win32/downloaded</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>DIST-win32/screenshots</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>DIST-win32/textures</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>userData</description>
                    <destination>${user_home_directory}/.local/share/data/QuteScoop/QuteScoop</destination>
                    <name>userDataUnix</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>DIST-unix/data</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>DIST-unix/downloaded</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>DIST-unix/screenshots</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>DIST-unix/textures</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>userData</description>
                    <destination>${user_home_directory}/Library/Application Support/QuteScoop/QuteScoop</destination>
                    <name>userDataMac</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>DIST-macx/data</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>DIST-macx/downloaded</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>DIST-macx/screenshots</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>DIST-macx/textures</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>userDataLocaton</description>
                    <destination>${userDataLocation}</destination>
                    <name>userDataLocation</name>
                    <platforms>all</platforms>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>${product_fullname}</comment>
                    <name>${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}\QuteScoop.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <finalPageActionList>
        <launchBrowser>
            <explanation>Show README</explanation>
            <url>${installdir}/README.html</url>
        </launchBrowser>
        <readFile>
            <name>changelog_txt</name>
            <path>${installdir}/CHANGELOG</path>
            <show>0</show>
        </readFile>
        <showText>
            <explanation>Show CHANGELOG</explanation>
            <text>${changelog_txt}</text>
            <title>CHANGELOG</title>
            <width>800</width>
        </showText>
        <launchBrowser>
            <explanation>Download the free X-Plane navdatabase (unzip somewhere, enter the path in Preferences...)</explanation>
            <url>http://data.x-plane.com/get_data.html</url>
        </launchBrowser>
        <launchBrowser>
            <explanation>View the QuteScoop project page</explanation>
            <url>http://qutescoop.sourceforge.net</url>
        </launchBrowser>
        <launchBrowser>
            <explanation>Visit the most active QuteScoop-users forum [german, but use any language you like]</explanation>
            <url>http://board.vacc-sag.org/49/28031/newpost.php</url>
        </launchBrowser>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_fullname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <platform>linux</platform>
        </platformOptions>
    </platformOptionsList>
</project>

